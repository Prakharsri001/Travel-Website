@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/userPage1.cshtml";
}

<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/css/hover-min.css" rel="stylesheet" />
<script src="~/Content/js/jquery.js"></script>
<script src="~/Content/js/bootstrap.min.js"></script>
<style>
    body {
        background-image: url(../../Content/image/aa4.jpg);
        background-attachment: fixed;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<body>
    <div class="container" style="margin-top:120px;margin-bottom:120px">
        <div class="col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <form action="/Home/userform" method="post" enctype="multipart/form-data">
                    <h2 style="text-align:center">Chal Review de</h2>
                    <hr style="background:teal;height:3px" />
                    Enter Your Full Name
                    <input type="text" class="form-control" name="txtname" />

                    Enter Where you go
                    <input type="text" class="form-control" name="txtgo" />

                    Enter Your Travelling Purpose
                    <input type="tel" class="form-control" name="txtpro" />
                  
                    Date When Travel
                    <input type="date" class="form-control" name="txtDate" />

                   Upload your Best photo
                   <input type="file" class="form-control" name="fupic" />
                   
                    <button type="submit" class="btn-group btn-group-justified" style="margin-top:43px">SUBMIT</button>

                </form>
            </div>
            <div class="col-sm-4"></div>

        </div>
    </div>
</body>
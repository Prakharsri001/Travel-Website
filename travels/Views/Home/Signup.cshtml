@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/Generalmaster.cshtml";
}

<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/css/hover-min.css" rel="stylesheet" />
<script src="~/Content/js/jquery.js"></script>
<script src="~/Content/js/bootstrap.min.js"></script>
<style>
    body {
        background-image: url(../../Content/image/aa4.jpg);
        background-attachment: fixed;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<body>
    <div class="container" style="margin-top:120px;margin-bottom:120px">
        <div class="col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <form action="/Home/signup" method="post">
                    <h2 style="text-align:center">Signup form</h2>
                    <hr style="background:teal;height:3px" />
                    Enter Your Full Name
                    <input type="text" class="form-control" name="txtid" />
                    Enter Your Email
                    <input type="email" class="form-control" name="txtemail" />
                    Enter Your Password
                    <input type="password" class="form-control" name="txtpass" />
                    <br />

                    <button type="submit" class="btn-group btn-group-justified">Submit</button>
                    <hr />
                </form>
            </div>
            <div class="col-sm-4"></div>

        </div>
    </div>
</body>


